{
  "name": "orbital-drop",
  "author": "21st.dev",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "packageManager": "pnpm@10.28.0",
  "engines": {
    "node": ">=22",
    "pnpm": ">=10"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:web": "tsc && vite build",
    "build:ios": "tsc && vite build && cap sync ios",
    "build:android": "tsc && vite build && cap sync android",
    "build:all": "tsc && vite build && cap sync",
    "preview": "vite preview",
    "lint": "biome check --write .",
    "format": "biome format --write .",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "maestro test .maestro/flows/",
    "test:e2e:web": "maestro test .maestro/flows/ --env PLATFORM=web",
    "test:e2e:android": "maestro test .maestro/flows/ --env PLATFORM=android",
    "test:e2e:ios": "maestro test .maestro/flows/ --env PLATFORM=ios",
    "test:all": "vitest run && pnpm test:e2e",
    "build:apk:debug": "cd android && ./gradlew assembleDebug",
    "build:apk:debug:all": "cd android && ./gradlew assembleDebug -Psplits=true",
    "cap:init": "cap init",
    "cap:add:ios": "cap add ios",
    "cap:add:android": "cap add android",
    "cap:sync": "cap sync",
    "cap:copy": "cap copy",
    "cap:open:ios": "cap open ios",
    "cap:open:android": "cap open android",
    "ionic:serve": "ionic serve"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "@capacitor/android": "^8.0.2",
    "@capacitor/cli": "^8.0.2",
    "@capacitor/core": "^8.0.2",
    "@capacitor/ios": "^8.0.2",
    "@capacitor/keyboard": "^8.0.0",
    "@capacitor/screen-orientation": "^8.0.0",
    "@capacitor/splash-screen": "^8.0.0",
    "@capacitor/status-bar": "^8.0.0",
    "@ionic/cli": "^7.2.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^25.1.0",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/ui": "^4.0.18",
    "happy-dom": "^20.4.0",
    "jsdom": "^27.4.0",
    "sharp": "^0.34.5",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-glsl": "^1.5.5",
    "vite-plugin-html": "^3.2.2",
    "vite-plugin-pwa": "^1.2.0",
    "vitest": "^4.0.18",
    "workbox-window": "^7.4.0"
  },
  "dependencies": {
    "@babylonjs/core": "^8.48.2",
    "@babylonjs/gui": "^8.48.2",
    "@babylonjs/havok": "^1.3.11",
    "@babylonjs/inspector": "^8.48.2",
    "@babylonjs/loaders": "^8.48.2",
    "@babylonjs/materials": "^8.48.2",
    "@babylonjs/post-processes": "^8.48.2",
    "@capacitor-community/sqlite": "^8.0.0",
    "animejs": "^4.3.5",
    "jeep-sqlite": "^2.8.0",
    "miniplex": "^2.0.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "tone": "^15.1.22",
    "yuka": "^0.7.8"
  }
}
