{
  "name": "orbital-drop",
  "author": "21st.dev",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "packageManager": "pnpm@10.28.0",
  "engines": {
    "node": ">=22",
    "pnpm": ">=10"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:web": "tsc && vite build",
    "build:ios": "tsc && vite build && cap sync ios",
    "build:android": "tsc && vite build && cap sync android",
    "build:all": "tsc && vite build && cap sync",
    "preview": "vite preview",
    "lint": "biome check --write --diagnostic-level=error .",
    "format": "biome format --write .",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "maestro test .maestro/flows/",
    "test:e2e:web": "maestro test .maestro/flows/ --env PLATFORM=web",
    "test:e2e:android": "maestro test .maestro/flows/ --env PLATFORM=android",
    "test:e2e:ios": "maestro test .maestro/flows/ --env PLATFORM=ios",
    "test:e2e:playwright": "playwright test --config src/tests/e2e/playwright.config.ts",
    "test:e2e:playwright:headed": "playwright test --config src/tests/e2e/playwright.config.ts --headed",
    "test:e2e:playwright:debug": "playwright test --config src/tests/e2e/playwright.config.ts --debug",
    "test:e2e:playwright:ui": "playwright test --config src/tests/e2e/playwright.config.ts --ui",
    "test:e2e:campaign": "playwright test --config src/tests/e2e/playwright.config.ts full-campaign",
    "test:e2e:campaign:headed": "playwright test --config src/tests/e2e/playwright.config.ts full-campaign --headed",
    "test:all": "vitest run && pnpm test:e2e",
    "build:apk:debug": "cd android && ./gradlew assembleDebug",
    "build:apk:debug:all": "cd android && ./gradlew assembleDebug -Psplits=true",
    "cap:init": "cap init",
    "cap:add:ios": "cap add ios",
    "cap:add:android": "cap add android",
    "cap:sync": "cap sync",
    "cap:copy": "cap copy",
    "cap:open:ios": "cap open ios",
    "cap:open:android": "cap open android",
    "cap:add:electron": "cap add @capacitor-community/electron",
    "cap:open:electron": "cap open @capacitor-community/electron",
    "build:electron": "tsc && vite build && cap sync @capacitor-community/electron",
    "electron:build": "cd electron && npm run electron:build",
    "electron:build-mac": "cd electron && npx electron-builder --mac --config electron-builder.config.json",
    "electron:build-linux": "cd electron && npx electron-builder --linux AppImage deb --config electron-builder.config.json",
    "electron:build-win": "cd electron && npx electron-builder --win --config electron-builder.config.json",
    "ionic:serve": "ionic serve",
    "generate:assets": "npx tsx scripts/generate-cinematic-assets.ts",
    "generate:assets:dry": "npx tsx scripts/generate-cinematic-assets.ts --dry-run",
    "generate:assets:videos": "npx tsx scripts/generate-cinematic-assets.ts --videos-only",
    "generate:assets:images": "npx tsx scripts/generate-cinematic-assets.ts --images-only",
    "generate:assets:fast": "npx tsx scripts/generate-cinematic-assets.ts --fast",
    "download:audio": "npx tsx scripts/download-audio-assets.ts",
    "download:audio:dry": "npx tsx scripts/download-audio-assets.ts --dry-run",
    "download:audio:cc0": "npx tsx scripts/download-audio-assets.ts --cc0-only",
    "download:audio:weapons": "npx tsx scripts/download-audio-assets.ts --category weapons",
    "download:audio:ambience": "npx tsx scripts/download-audio-assets.ts --category ambience"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "@capacitor-community/electron": "^5.0.1",
    "@capacitor/android": "^8.0.2",
    "@capacitor/cli": "^8.0.2",
    "@capacitor/core": "^8.0.2",
    "@capacitor/ios": "^8.0.2",
    "@capacitor/keyboard": "^8.0.0",
    "@capacitor/screen-orientation": "^8.0.0",
    "@capacitor/splash-screen": "^8.0.0",
    "@capacitor/status-bar": "^8.0.0",
    "@ionic/cli": "^7.2.1",
    "@playwright/test": "^1.58.1",
    "@pollyjs/adapter-node-http": "^6.0.6",
    "@pollyjs/core": "^6.0.6",
    "@pollyjs/persister-fs": "^6.0.6",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^25.1.0",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "dotenv": "^17.2.3",
    "happy-dom": "^20.4.0",
    "jsdom": "^27.4.0",
    "msw": "^2.12.7",
    "netlify-cli": "^23.14.0",
    "playwright": "^1.58.1",
    "sharp": "^0.34.5",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-glsl": "^1.5.5",
    "vite-plugin-html": "^3.2.2",
    "vite-plugin-pwa": "^1.2.0",
    "vitest": "^4.0.18",
    "workbox-window": "^7.4.0"
  },
  "dependencies": {
    "@babylonjs/core": "^8.48.2",
    "@babylonjs/gui": "^8.48.2",
    "@babylonjs/havok": "^1.3.11",
    "@babylonjs/inspector": "^8.48.2",
    "@babylonjs/loaders": "^8.48.2",
    "@babylonjs/materials": "^8.48.2",
    "@babylonjs/post-processes": "^8.48.2",
    "@capacitor-community/sqlite": "^8.0.0",
    "@google/genai": "^1.39.0",
    "animejs": "^4.3.5",
    "jeep-sqlite": "^2.8.0",
    "loglevel": "^1.9.2",
    "miniplex": "^2.0.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "simple-keyboard": "^3.8.93",
    "sql.js": "^1.13.0",
    "tone": "^15.1.22",
    "yuka": "^0.7.8",
    "zod": "^4.3.6",
    "zustand": "^5.0.10"
  }
}
